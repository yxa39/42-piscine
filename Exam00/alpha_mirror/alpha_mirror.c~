#include <unistd.h>

int main(int argc, char **argv)
{
	char c;
	if (argc == 2)
	{
		while (*argv[1])
		{
			c = *argv[1];
			if (*argv[1] >= 'a' && *argv[1] <= ('z' - 'a')/2)
				c = 'z' - (*argv[1] - 'a');
			if (*argv[1] >= 'A' && *argv[1] <= ('Z' - 'A')/2)
                c = 'Z'- (*argv[1] - 'A');
			if (*argv[1] >= ('z' - 'a')/2  && *argv[1] <= 'z')
                c = 'a'+ ('z' - *argv[1]);
			if (*argv[1] >= ('Z' - 'A')/2  && *argv[1] <= 'Z')
                c = 'A'+ ('Z' - *argv[1]);
			write(1, argv[1], 1);
			argv[1]++;
		}
	}
	write(1, "\n", 1);
}
